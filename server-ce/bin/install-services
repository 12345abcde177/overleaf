#! env bash

grep 'name:' config/services.js | \
	sed 's/.*name: "\(.*\)",/\1/' | \
	while read service
	do
		pushd $service
		echo "Installing Service $service"
		echo '  installing Node'
		type -t nvm && nvm install
		type -t nvm && nvm use
		echo '  installing Dependencies'
		npm install
		popd
	done
